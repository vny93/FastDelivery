<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lnl_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg7"
        android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout style="@style/style_appBarLayout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_insert_staff"
            style="@style/style_toolbar"
            app:title="Đăng ký cửa hàng"
            app:titleTextColor="@color/white" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        style="@style/style_cardview_userlogin2"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        android:backgroundTint="@color/color7"
        app:cardCornerRadius="@dimen/_15sdp">

        <LinearLayout
            android:id="@+id/lnl_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title_username"
                    style="@style/style_textview_forgotpw"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_minus20sdp"
                    android:text="@string/tv_username"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    style="@style/style_cardview_userlogin2"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:backgroundTint="@color/white">

                    <EditText
                        android:id="@+id/edt_username_staff"
                        style="@style/style_edt_login2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:background="@color/white"
                        android:hint="@string/hint_edtusername" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/titlePass"
                    style="@style/style_textview_forgotpw"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_minus5sdp"
                    android:layout_marginBottom="@dimen/_minus20sdp"
                    android:text="@string/tv_password"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    style="@style/style_cardview_userlogin2"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:backgroundTint="@color/white">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_currentPas"
                            style="@style/style_edt_login2"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:hint="@string/hint_edtpassword"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/style_textview_forgotpw"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_minus5sdp"
                    android:text="@string/pf_shop_name"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_name_staff"
                    style="@style/style_cardview_userlogin2"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:backgroundTint="@color/white">

                    <EditText
                        android:id="@+id/edt_name_staff"
                        style="@style/style_edt_login2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:backgroundTint="@color/white"
                        android:hint="@string/pf_shopName" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/style_textview_forgotpw"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_minus5sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/pf_phone"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_phone"
                    style="@style/style_cardview_userlogin2"
                    android:backgroundTint="@color/white"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/edt_phone_staff"
                        style="@style/style_edt_login2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:hint="@string/pf_hintPhone"
                        android:inputType="number"
                        android:backgroundTint="@color/white"
                        android:textColor="@color/black" />
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/style_textview_forgotpw"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:text="@string/hint_email"
                    android:textColor="@color/black" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cart_email_staff"
                    style="@style/style_cardview_userlogin2"
                    android:backgroundTint="@color/white"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <EditText
                        android:id="@+id/edt_email_staff"
                        style="@style/style_edt_login2"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:backgroundTint="@color/white"
                        android:hint="@string/hint_email" />

                </androidx.cardview.widget.CardView>


            </LinearLayout>

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_3sdp"
                android:text="@string/pf_address"
                android:textColor="@color/black" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_address"
                style="@style/style_cardview_itemProductType"
                android:backgroundTint="@color/white"
                android:layout_marginStart="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:elevation="@dimen/_20sdp">

                <EditText
                    android:id="@+id/edt_address_staff"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_80sdp"
                    android:background="@drawable/boder_rectangle"
                    android:gravity="top"
                    android:hint="@string/pf_hintAddress"
                    android:inputType="text|textMultiLine"
                    android:maxLength="100"
                    android:padding="@dimen/_8sdp"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/white"
                    android:textSize="@dimen/_11sdp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:layout_marginBottom="@dimen/_20sdp"
        android:background="@drawable/custom_button4"
        android:text="@string/tv_save4"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp" />
    </LinearLayout>
</ScrollView>
