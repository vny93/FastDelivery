<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">


    <LinearLayout
        android:id="@+id/lnl_custom_staff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color4"
        android:orientation="vertical">

        <com.google.android.material.appbar.AppBarLayout style="@style/style_appBarLayout">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_update_shop"
                style="@style/style_toolbar"
                app:titleTextColor="@color/white"
                app:title="Cập nhật cửa hàng" />
        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title_username"
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:textColor="@color/dark_green"
                android:text="@string/pf_shop_name" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_name"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_shop_name"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/pf_shop_name" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:textColor="@color/dark_green"
                android:text="@string/pf_phone" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_phone"
                style="@style/style_cardview_userlogin2"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_phone_shop"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:hint="@string/pf_hintPhone"
                    android:inputType="number"
                    android:enabled="false"
                    android:textColor="@color/black" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                style="@style/style_textview_forgotpw"
                android:layout_marginStart="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_minus20sdp"
                android:textColor="@color/dark_green"
                android:text="@string/hint_email" />

            <androidx.cardview.widget.CardView
                android:id="@+id/cart_email"
                style="@style/style_cardview_userlogin2"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">

                <EditText
                    android:id="@+id/edt_email_shop"
                    style="@style/style_edt_login2"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:enabled="false"
                    android:hint="@string/hint_email" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_minus15sdp"
            android:textColor="@color/dark_green"
            android:text="@string/title_adress" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_spinner_distric"
            style="@style/style_cardview_userlogin2"
            android:layout_marginTop="@dimen/_15sdp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge">

                <AutoCompleteTextView
                    android:id="@+id/spinner_district"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/boder_rectangle"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_minus15sdp"
            android:textColor="@color/dark_green"
            android:text="@string/title_address2" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_spinner_wards"
            style="@style/style_cardview_userlogin2"
            android:layout_marginTop="@dimen/_15sdp">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/Theme.MaterialComponents.Light.DarkActionBar.Bridge">

                <AutoCompleteTextView
                    android:id="@+id/spinner_wards"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@drawable/boder_rectangle"
                    android:enabled="false"
                    android:gravity="center"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp" />

            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>




        <TextView
            style="@style/style_textview_forgotpw"
            android:layout_marginStart="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_minus15sdp"
            android:textColor="@color/dark_green"
            android:text="@string/title_address3" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_way"
            style="@style/style_cardview_userlogin2"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_5sdp">

            <EditText
                android:id="@+id/edt_shop_way"
                style="@style/style_edt_login2"
                android:layout_marginStart="@dimen/_5sdp"
                android:enabled="false"
                android:hint="@string/title_address3" />

        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/btnSave"
            style="@style/style_btnlogin"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_100sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:layout_marginEnd="@dimen/_100sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:text="@string/tv_save"
            android:textSize="@dimen/_13sdp" />

    </LinearLayout>

</ScrollView>