<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg7"
    tools:context=".screens.shipper.registerArea.RegisterAreaFgm">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tv_seen_salary"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/black"
        android:layout_marginTop="@dimen/_10sdp"
        android:textSize="@dimen/_13sdp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_75sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_75sdp">

        <Button
            android:id="@+id/selectDate"
            style="?android:spinnerStyle"
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="@string/title_time"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

    </androidx.cardview.widget.CardView>

    <ImageView
        android:id="@+id/refresh"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_marginStart="@dimen/_250sdp"
        android:layout_marginTop="@dimen/_minus30sdp"
        android:layout_marginBottom="@dimen/_3sdp"
        android:background="@drawable/ic_baseline_refresh_24"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_list_salary"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_390sdp"
        android:layout_marginTop="@dimen/_10sdp" />



</LinearLayout>