<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view_Account"
    android:background="@drawable/bg7"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout style="@style/style_appBarLayout">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_changePw"
            style="@style/style_toolbar"
            app:titleTextColor="@color/white"
            app:title="@string/title_changePw" />
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.cardview.widget.CardView
        style="@style/style_cardview_userlogin2"
        android:layout_marginStart="@dimen/_20sdp"
        android:layout_marginEnd="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginBottom="@dimen/_15sdp"
        app:cardCornerRadius="@dimen/_15sdp"
        android:backgroundTint="@color/color7">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/style_textview_forgotpw"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_minus20sdp"
                    android:textColor="@color/black"
                    android:text="@string/tv_currentPass" />

                <androidx.cardview.widget.CardView
                    style="@style/style_cardview_userlogin2"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:backgroundTint="@color/white">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_currentPass"
                            style="@style/style_edt_login2"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:hint="@string/hint_edtpassword"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/style_textview_forgotpw"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_minus20sdp"
                    android:textColor="@color/black"
                    android:text="@string/tv_newPass" />

                <androidx.cardview.widget.CardView
                    style="@style/style_cardview_userlogin2"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:backgroundTint="@color/white">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_newPass"
                            style="@style/style_edt_login2"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:hint="@string/hint_edtpassword"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_30sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/style_textview_forgotpw"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_minus20sdp"
                    android:textColor="@color/black"
                    android:text="@string/tv_confirmPass" />

                <androidx.cardview.widget.CardView
                    style="@style/style_cardview_userlogin2"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_15sdp"
                    android:backgroundTint="@color/white">

                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:hintEnabled="false"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/edt_Pass2"
                            style="@style/style_edt_login2"
                            android:layout_marginStart="@dimen/_5sdp"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:hint="@string/hint_edtpassword"
                            android:inputType="textPassword"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>



    <Button
        android:id="@+id/btnChangePass"
        style="@style/style_btnlogin"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/_80sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:layout_marginEnd="@dimen/_80sdp"
        android:textColor="@color/white"
        android:text="@string/tv_save3"
        android:textSize="@dimen/_13sdp" />
</LinearLayout>