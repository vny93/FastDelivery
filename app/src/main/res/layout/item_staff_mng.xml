<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        style="@style/style_cardview_itemProductType"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imv_avt_staff"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_40sdp"
                android:gravity="center"
                android:textSize="@dimen/_14sdp"
                android:background="@drawable/avt1"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_staff_id"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:text="@string/tv_id"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:background="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_staff_name"
                android:layout_width="@dimen/_170sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:text="@string/pf_name"
                android:textColor="@color/black"
                android:textSize="@dimen/_13sdp"
                android:background="@color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imv_remove_staff"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:src="@drawable/ic_baseline_delete_forever_24"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>