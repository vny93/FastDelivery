<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <androidx.cardview.widget.CardView
        style="@style/style_cardview_itemProductType"
        android:layout_marginStart="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginEnd="@dimen/_5sdp"
        android:layout_marginBottom="@dimen/_2sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_5sdp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edt_start_distance"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:text="@string/tv_item_mass"
                android:textColor="@color/dark_green"
                android:enabled="false"
                android:inputType="number"
                android:textSize="@dimen/_14sdp"
                android:background="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_end_distance"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:text="@string/tv_item_mass"
                android:textColor="@color/dark_green"
                android:enabled="false"
                android:inputType="number"
                android:textSize="@dimen/_14sdp"
                android:background="@color/white"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edt_price_distance"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:gravity="center"
                android:text="@string/tv_item_mass"
                android:textColor="@color/dark_green"
                android:enabled="false"
                android:inputType="number"
                android:textSize="@dimen/_14sdp"
                android:background="@color/white"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/imv_edt_distance"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:src="@drawable/ic_baseline_edit_24"
                android:textStyle="bold" />
            <ImageView
                android:id="@+id/imv_remove_distance"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:gravity="center"
                android:textSize="@dimen/_12sdp"
                android:src="@drawable/ic_baseline_close_24"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>